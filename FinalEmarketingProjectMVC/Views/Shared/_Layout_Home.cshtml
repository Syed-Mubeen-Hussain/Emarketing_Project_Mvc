
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chamb - Responsive E-commerce HTML5 Template</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--enable mobile device-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--fontawesome ~/Content/css-->
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <!--bootstrap ~/Content/css-->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!--animate ~/Content/css-->
    <link rel="stylesheet" href="~/Content/css/animate-wow.css">
    <!--main ~/Content/css-->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/Content/css/slick.min.css">
    <!--responsive ~/Content/css-->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
</head>
<style>
    #about-us {
        padding: 0px;
    }

    .dropdown-menu {
        position: absolute;
        top: 100%;
        left: -88px;
    }

    #header > nav > div > div > div.col-md-8.col-sm-12 > div > div.login-sr > div > ul > li > ul > li > div > ul > li:nth-child(n) {
        width: 100%;
    }

    #header > nav > div > div > div.col-md-8.col-sm-12 > div > div.login-sr > div > ul > li > ul > li > div > ul > li:nth-child(1) {
        padding: 12px;
        text-align: center;
        font-size: 20px;
    }

    #header > nav > div > div > div.col-md-8.col-sm-12 > div > div.login-sr > div > ul > li > ul > li > div > ul > li:nth-child(2) > a {
        text-align: center;
        border: 1px solid lightblue;
        font-weight: bold;
        border-radius: 10px;
    }

    #header > nav > div > div > div.col-md-8.col-sm-12 > div > div.help-r.hidden-xs {
        margin-top: 14px;
        background: whitesmoke;
        font-weight: bold;
        border-radius: 5px;
    }

    .nav-box {
        border: none;
    }

    #header > nav > div > div > div.col-md-8.col-sm-12 > div > div.login-sr > div > ul > ul > li:nth-child(1) > a {
        font-size: 17px;
        font-weight: bold;
    }
    #header > nav > div > div > div.col-md-8.col-sm-12 > div > div.help-r.hidden-xs > div{
        margin:0px;
    }
</style>
<body>
    <header id="header" class="top-head">
        <!-- Static navbar -->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4 col-sm-12 left-rs">
                        <div class="navbar-header">
                            <button type="button" id="top-menu" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="index.html" class="navbar-brand"><img src="~/Content/images/logo.png" alt="" /></a>
                        </div>
                        <form class="navbar-form navbar-left web-sh">
                            <div class="form">
                                <input type="text" class="form-control" placeholder="Search for products or companies">
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 col-sm-12">
                        <div class="right-nav">
                            <div class="login-sr">
                                <div class="login-signup">
                                    <ul>
                                        <ul>
                                        @if (Session["u_id"] == null)
                                        {
                                            <li><a href="@Url.Action("Login","Home")">Login</a></li>
                                        }

                                            @if (Session["u_id"] == null)
                                                {
                                                <li>
                                                    <a class="custom-b" href="@Url.Action("SignUp","Home")">Sign up</a>
                                                </li>
                                            }
                                           @if (Session["ImgPath"] != null)
                                           {



                                                <li>
                                                    <div style="cursor:pointer;" class="dropdown">
                                                        <a class="dropdown-toggle p-0" id="about-us" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            @{
                                                                if (Session["ImgPath"] != null)
                                                                {
                                                                    <img width="50px" src="@Url.Content(Session["ImgPath"].ToString())" alt="Alternate Text" />

                                                                }
                                                            }
                                                        </a>
                                                        <ul class="dropdown-menu" aria-labelledby="about-us">
                                                            <li><b>@Session["u_username"]</b></li>
                                                            <li>
                                                                <a href="@Url.Action("Signout","Home")">Sign Out</a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </li>
                                                

                                                }
                                                    
                                            </ul>



                                        </ul>
                                    
                                    
                                </div>
                            </div>
                            <div class="help-r hidden-xs">
                                <div class="help-box">
                                    @if (Session["u_id"] != null)
                                    {
                                        <ul>
                                            <li>
                                                <a href="@Url.Action("CreateAd","Home")"> Post An Ad</a>
                                            </li>
                                        </ul>
                                    }
                                </div>
                            </div>
                            <div class="nav-b hidden-xs">
                                <div class="nav-box">
                                    <ul>
                                        <li><a href="howitworks.html">How it works</a></li>
                                        <li><a href="about-us.html">Chamb for Business</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.container-fluid -->
        </nav>
    </header>
    <!-- Modal -->
    <div class="modal fade lug" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change</h4>
                </div>
                <div class="modal-body">
                    <ul>
                        <li><a href="#"><img src="~/Content/images/flag-up-1.png" alt="" /> United States</a></li>
                        <li><a href="#"><img src="~/Content/images/flag-up-2.png" alt="" /> France </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="sidebar" class="top-nav">
        <ul id="sidebar-nav" class="sidebar-nav">
            <li><a href="#">Help</a></li>
            <li><a href="howitworks.html">How it works</a></li>
            <li><a href="#">chamb for Business</a></li>
        </ul>
    </div>
